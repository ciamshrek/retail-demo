# Example .env file for the retail demo application
# Copy this to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Base URLs
BASE_URL=http://localhost:3000
BASE_URL_OTHER_PORT=http://localhost:3001

# Admin Password (for any admin functions)
ADMIN_PASSWORD=your-admin-password

# JWT Secret (for any custom JWT operations)
JWT_SECRET=your-jwt-secret

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-spa-client-id
AUTH0_CLIENT_SECRET=your-spa-client-secret
AUTH0_AUDIENCE=https://api.retail-demo.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Database URL (if using external database)
# DATABASE_URL=postgresql://username:password@localhost:5432/retail_demo
